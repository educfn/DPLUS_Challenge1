<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dplus1.Views.ClientsListView"
             xmlns:viewModels="clr-namespace:dplus1.ViewModels"
             x:DataType="viewModels:ClientsListViewModel">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Button
                x:Name="BtnNavigateToClient"
                Text="Navigate to Client View"
                Command="{Binding CommandNavigateToClientView}"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
